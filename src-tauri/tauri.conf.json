{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "focus-lock",
  "version": "0.1.0",
  "identifier": "rs.focus-lock",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "focus-lock",
        "width": 1100,
        "height": 760,
        "minWidth": 860,
        "minHeight": 620,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
