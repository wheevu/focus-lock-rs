{
  "$schema": "../node_modules/@tauri-apps/cli/schema/capability.json",
  "identifier": "main-window",
  "description": "Permissions for the main focus-lock window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "shell:allow-open",
    "fs:read-files",
    "fs:write-files",
    "fs:read-dirs",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive"
  ]
}
